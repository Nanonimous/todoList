
<%- include("partials/header_home.ejs") %>

<!-- forms -->

<div class="forms_box">
  <div class="heading"><%=day%>, <%=date%>/<%=month%>/<%=years%></div>
  <% if(locals.tasks_home){%>
    <% for(var i= 0;i<tasks_home.length; i++ ){ %>
      <div class="each_tasksbox">
          <tr>  
            <td><input type="checkbox" name="strike" class="check_box" ></td>
            <td><p class="added_tasks">
              <%=tasks_home[i]%>
            </p></td>
          </tr>
        
         
        
      </div>
    <%}%>
  <%}%>
  
  <form action="/add_home" method="post">
  <div class="sub_con">
    <input type="text" name="task_home" class="inputbox">
    <input type="submit" class="submitbutton">
  </div>
  </form>
</div>

